<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context="com.kyudong.termi.Login"
    >

    <LinearLayout
        android:id="@+id/llll"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="210dp"
        android:gravity="center_vertical">

        <CheckBox
            android:layout_width="27.7dp"
            android:layout_height="24dp"
            android:id="@+id/autoLoginCB"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:button="@drawable/custom_check_box"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동로그인"
            android:id="@+id/textView8"
            android:layout_marginLeft="6dp" />
    </LinearLayout>

    <EditText
        android:layout_width="303.3dp"
        android:layout_height="43.3dp"
        android:id="@+id/IdEditText"
        android:background="@drawable/rectangle_24"
        android:layout_below="@+id/llll"
        android:layout_alignParentStart="false"
        android:layout_marginTop="17.3dp"
        android:layout_marginLeft="28.3dp"
        android:textColor="@color/txt"
        android:textColorHint="#33000000"
        android:textSize="16dp"
        android:maxLines="1"
        android:inputType="textVisiblePassword"
        android:layout_centerHorizontal="true"
        android:paddingLeft="21.3dp"
        android:hint="@string/input_id"
        android:editable="true"
        android:maxLength="16"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwdEditText"
        android:layout_below="@+id/IdEditText"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="@string/input_pwd"
        android:textColor="#8a262b4c"
        android:textColorHint="#33000000"
        android:textSize="16dp"
        android:paddingLeft="18.3dp"
        android:paddingBottom="20dp"
        android:maxLength="16"/>

    <Button
        android:layout_width="303.3dp"
        android:layout_height="36dp"
        android:text="로그인"
        android:background="@drawable/loginbtngray"
        android:id="@+id/loginBtn"
        android:layout_below="@+id/pwdEditText"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="28.3dp"
        android:layout_marginTop="23.5dp"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true" />

    <TextView
        android:background="@drawable/rectangle_283_copy"
        android:layout_width="303.3dp"
        android:layout_height="36dp"
        android:text="터미 시작하기"
        android:id="@+id/signInTxv"
        android:textSize="20dp"
        android:textColor="#ffa000"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="28.3dp"
        android:layout_marginBottom="27.7dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:background="@drawable/termilogo"
        android:layout_width="165dp"
        android:layout_height="67dp"
        android:id="@+id/logoImageView"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
