<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kyudong.termi.Login">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동로그인"
        android:id="@+id/autoLoginCB"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:checked="false"
        android:layout_marginTop="210dp" />

    <EditText
        android:layout_width="303.3dp"
        android:layout_height="43.3dp"
        android:id="@+id/IdEditText"
        android:background="@drawable/rectangle_24"
        android:layout_below="@+id/autoLoginCB"
        android:layout_alignParentStart="false"
        android:layout_marginTop="17.3dp"
        android:layout_marginLeft="28.3dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwdEditText"
        android:layout_below="@+id/IdEditText"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="303.3dp"
        android:layout_height="36dp"
        android:text="로그인"
        android:background="@drawable/rectangle_283_rectangle_55"
        android:id="@+id/loginBtn"
        android:layout_below="@+id/pwdEditText"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="28.3dp"
        android:layout_marginTop="23.5dp"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true" />

    <TextView
        android:background="@drawable/rectangle_283_copy"
        android:layout_width="303.3dp"
        android:layout_height="36dp"
        android:text="터미 시작하기"
        android:id="@+id/signInTxv"
        android:textSize="20dp"
        android:textColor="#ffa000"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="28.3dp"
        android:layout_marginBottom="27.7dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:background="@drawable/termilogo"
        android:layout_width="165dp"
        android:layout_height="67dp"
        android:id="@+id/logoImageView"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
