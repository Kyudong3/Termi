<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kyudong.termi.SignUp"
    android:background="#FAFAFA">

    <android.support.v7.widget.Toolbar

        android:id="@+id/signUpToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#f5f5f5">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="터미 시작하기"
            android:textSize="20sp"
            android:textColor="#ffa000" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:text="사용할 아이디"
        android:id="@+id/textView3"
        android:layout_marginTop="151dp"
        android:layout_marginLeft="28.3dp"
        android:textSize="20dp"
        android:textColor="#ffa000" />

    <EditText
        android:layout_width="303.3dp"
        android:layout_height="43.3dp"
        android:id="@+id/signInId"
        android:hint="@string/input_id"
        android:textColor="@color/txt"
        android:textColorHint="#33000000"
        android:textSize="16dp"
        android:maxLines="1"
        android:background="@drawable/rectangle_24"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28.3dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="21.3dp"
        android:maxLength="16"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="비밀번호"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="false"
        android:textSize="20dp"
        android:textColor="#ffa000"
        android:layout_marginLeft="28.3dp" />

    <EditText
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signInPwd"
        android:hint="@string/input_pwd"
        android:textColor="#8a262b4c"
        android:textColorHint="#33000000"
        android:textSize="16dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:maxLength="16"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/signInPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <CheckBox
            android:layout_width="27.7dp"
            android:layout_height="24dp"
            android:id="@+id/imageButton2"
            android:layout_marginLeft="28.3dp"
            android:checked="false"
            android:button="@drawable/custom_check_box" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_marginLeft="6dp"
            android:textColor="#8A212121"
            android:text="개인정보 취급방침"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세정보"
            android:textColor="#8A212121"
            android:id="@+id/detailTxv"
            android:layout_marginLeft="100.7dp" />
    </LinearLayout>

    <Button
        android:layout_width="310dp"
        android:layout_height="37.3dp"
        android:text="가입 완료"
        android:id="@+id/signInBtn"
        android:background="@drawable/loginbtncolor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="27.7dp"
        android:layout_marginBottom="27.3dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="16dp" />

</RelativeLayout>
