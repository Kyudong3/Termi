<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#CC000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogTxv"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="276dp"
        android:layout_height="226dp"
        android:id="@+id/dialogIV"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="52.3dp">

        <Button
            android:layout_width="112.7dp"
            android:layout_height="39.3dp"
            android:text="무시"
            android:background="@drawable/ignorebtn"
            android:id="@+id/ignoreBtn"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:layout_width="112.7dp"
            android:layout_height="39.3dp"
            android:text="읽기"
            android:background="@drawable/dialogbutton"
            android:id="@+id/readDialog"
            android:layout_marginLeft="19.7dp"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>